@model IEnumerable<EmployeeDapper.Data.Models.Employee>

@{
    ViewData["Title"] = "All Employees";
}

<h2>All Employees</h2>
<a asp-action="Add" class="btn btn-primary mb-3"><i class="bi bi-plus-circle"></i> Add New Employee</a>
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Date of Birth</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>#@employee.EmployeeID</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>@employee.DateOfBirth.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="/Employee/Details?id=@employee.EmployeeID" class="btn btn-primary btn-sm"><i class="bi bi-info-circle"></i> All Details</a>
                        <a href="/Employee/Edit?id=@employee.EmployeeID" class="btn btn-success btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a href="/Employee/Delete?id=@employee.EmployeeID" onclick="return window.confirm('Are you sure you want to delete this record?')" class="btn btn-danger btn-sm"><i class="bi bi-trash3-fill"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



